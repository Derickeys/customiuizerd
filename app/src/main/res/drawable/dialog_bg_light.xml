<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@android:color/transparent" />
			<padding
				android:bottom="@dimen/dialog_border_padding"
				android:left="@dimen/dialog_border_padding"
				android:right="@dimen/dialog_border_padding"
				android:top="@dimen/dialog_border_padding" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/dialog_bg_corner_radius" />
			<solid android:color="@android:color/white" />
		</shape>
	</item>
</layer-list>
