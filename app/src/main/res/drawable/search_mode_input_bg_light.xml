<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:gravity="bottom">
		<shape>
			<size android:height="1px" />
			<solid android:color="@color/divider_line_light" />
		</shape>
	</item>
	<item android:bottom="1px">
		<shape>
			<solid android:color="?android:attr/colorPrimary" />
			<padding
				android:bottom="@dimen/search_mode_bg_padding"
				android:left="@dimen/search_mode_bg_padding"
				android:right="@dimen/search_mode_bg_padding"
				android:top="@dimen/search_mode_bg_padding_top" />
		</shape>
	</item>
</layer-list>
