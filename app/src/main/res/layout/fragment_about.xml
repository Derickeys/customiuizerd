<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:miuizer="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="40dp"
			android:gravity="center"
			android:orientation="vertical">

			<FrameLayout
				android:layout_height="80dp"
				android:layout_width="80dp"
				android:backgroundTint="@color/ic_launcher_background"
				android:background="@drawable/ic_mask">

				<ImageView
					android:id="@+id/miuizer_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:contentDescription="@null"
					android:gravity="center"
					android:layout_gravity="center"
					android:scaleX="1.5"
					android:scaleY="1.5"
					android:src="@mipmap/ic_launcher_foreground" />

			</FrameLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="9dp"
				android:gravity="center"
				android:text="@string/app_name"
				android:textSize="19.3sp"
				android:textColor="@color/preference_primary_text_color" />

			<TextView
				android:id="@+id/about_dev"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:gravity="center"
				android:maxLines="1"
				android:text="@string/about_dev"
				android:textColor="@color/color_not_selected"
				android:textSize="12sp" />

			<TextView
				android:id="@+id/about_version"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="46.7dp"
				android:gravity="center"
				android:maxLines="1"
				android:text="@string/about_version"
				android:textColor="@color/color_not_selected"
				android:textSize="12sp" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="@color/about_divider" />

		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:layout_marginTop="6.7dp"
			android:background="@color/about_divider" />

		<ListView
			android:id="@android:id/list"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start"
			android:orientation="vertical"
			android:paddingStart="25.5dp"
			android:paddingEnd="25.5dp">

			<TextView
				style="@style/Widget.InputField"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="@string/about_dynamic"
				android:textColor="@color/color_not_selected" />

			<TextView
				style="@style/Widget.InputField"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="@string/about_unsupported"
				android:textColor="@color/color_not_selected" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>