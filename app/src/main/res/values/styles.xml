<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="@android:style/Theme.Material.Light">
		<item name="android:actionBarSize">?android:attr/actionBarSize</item>
		<item name="android:textColor">@android:color/secondary_text_light</item>
		<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">false</item>
	</style>

	<style name="ActivityAnimation" parent="@android:style/Animation">
		<item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
		<item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
		<item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
		<item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
	</style>

	<style name="Invisible" parent="@android:style/Theme.Translucent">
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<attr name="accentColor" format="color" />
	<attr name="headerColor" format="color" />
	<attr name="statusBarColor" format="color" />

	<style name="MIUIPrefs">
		<item name="android:colorAccent">?attr/accentColor</item>
		<item name="android:colorPrimary">?attr/headerColor</item>
		<item name="android:statusBarColor">?attr/statusBarColor</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">false</item>
	</style>

	<style name="ApplyInvisible">
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<style name="TextAppearance">
		<item name="android:textSize">@dimen/secondary_text_size</item>
		<item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textColorLink">?android:attr/textColorLink</item>
	</style>
	<style name="TextAppearance.PreferenceList">
		<item name="android:textSize">@dimen/normal_text_size</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/preference_primary_text_light</item>
	</style>
	<style name="TextAppearance.List">
		<item name="android:textSize">@dimen/normal_text_size</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/list_text_dark</item>
	</style>
	<style name="TextAppearance.List.Secondary">
		<item name="android:textSize">@dimen/secondary_text_size</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/list_secondary_text_dark</item>
	</style>
	<style name="TextAppearance.List.Secondary.Preference">
		<item name="android:textColor">@color/preference_secondary_text_light</item>
	</style>
	<style name="TextAppearance.Widget"></style>
	<style name="TextAppearance.Widget.EditText">
		<item name="android:textSize">@dimen/secondary_text_size</item>
		<item name="android:textColor">?android:attr/editTextColor</item>
		<item name="android:textColorHint">@color/hint_edit_text_color_light</item>
	</style>
	<style name="TextAppearance.Widget.EditText.Search">
		<item name="android:textColorHint">@color/edit_text_search_hint_color_light</item>
	</style>

	<style name="Widget"></style>
	<style name="Widget.PreferenceItem">
		<item name="android:paddingTop">@dimen/preference_item_padding_top</item>
		<item name="android:paddingBottom">@dimen/preference_item_padding_bottom</item>
	</style>
	<style name="Widget.EditPreference">
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
	</style>
	<style name="Widget.EditPreference.Padded">
		<item name="android:layout_marginTop">@dimen/screen_padding_top</item>
		<item name="android:layout_marginBottom">@dimen/preference_screen_padding_bottom</item>
		<item name="android:layout_marginStart">?android:attr/listPreferredItemPaddingLeft</item>
		<item name="android:layout_marginEnd">?android:attr/listPreferredItemPaddingRight</item>
	</style>
	<style name="Widget.InputField">
		<item name="android:gravity">top|center_vertical</item>
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/preference_text_size</item>
	</style>
	<style name="Widget.InputField.Category">
		<item name="android:paddingBottom">9dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">@dimen/preference_category_text_size</item>
		<item name="android:textColor">@color/preference_category_text_color_light</item>
	</style>
	<style name="Widget.InputField.Category.First">
		<item name="android:layout_marginTop">0dp</item>
	</style>
	<style name="Widget.InputField.Category.Middle">
		<item name="android:layout_marginTop">16dp</item>
	</style>
	<style name="Widget.SearchActionMode">
		<item name="android:gravity">right|center_horizontal|clip_horizontal</item>
		<item name="android:background">@drawable/search_mode_bg_light</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="Widget.ProgressBar">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:maxWidth">@dimen/progressbar_size</item>
		<item name="android:maxHeight">@dimen/progressbar_size</item>
		<item name="android:indeterminateDrawable">@drawable/progressbar_indeterminate_light</item>
		<item name="android:minWidth">@dimen/progressbar_size</item>
		<item name="android:minHeight">@dimen/progressbar_size</item>
<!--
		<item name="indeterminateFramesCount">48</item>
		<item name="indeterminateFramesDuration">25</item>
-->
	</style>

</resources>
